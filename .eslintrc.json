{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "globals": {
        "html": "readonly"
    },
    "rules": {
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "indent": [
            "error",
            4,
            {
                "outerIIFEBody": 0
            }
        ],
        "no-unused-vars": "warn",
        "no-console": "off"
    }
}